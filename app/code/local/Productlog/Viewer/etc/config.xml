<config>
  <modules>
      <Productlog_Viewer>
          <version>1.0.0</version>
      </Productlog_Viewer>
  </modules>
  <global>
    <blocks>
      <productlog_viewer>
        <class>Productlog_Viewer_Block</class>
      </productlog_viewer>
    </blocks>
    <helpers>
      <productlog_viewer>
        <class>Productlog_Viewer_Helper</class>
      </productlog_viewer>
    </helpers>

    <models>
      <productlog_viewer>
        <class>Productlog_Viewer_Model</class>
        <resourceModel>productlog_viewer_resource</resourceModel>
      </productlog_viewer>
      <productlog_viewer_resource>
        <class>Productlog_Viewer_Model_Mysql4</class>
        <entities>
          <viewer><table>productlog_viewer_entity</table></viewer>
        </entities>
      </productlog_viewer_resource>
    </models>

    <resources>
      <productlog_viewer_setup>
        <setup>
          <module>Productlog_Viewer</module>
          <class>Mage_Core_Model_Resource_Setup</class>
        </setup>
      </productlog_viewer_setup>
    </resources>
  </global>

  <frontend>
      <routers>
          <productlog_viewer>
              <use>standard</use>
              <args>
                  <module>Productlog_Viewer</module>
                  <frontName>heyo</frontName>
              </args>
          </productlog_viewer>
      </routers>
    </frontend>
</config>
